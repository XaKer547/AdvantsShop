@{
    ViewData["Title"] = "Home Page";
}

<div class="row d-flex justify-content-end">
    <div class="col-9 ps-2">
        <div class="carousel slide carousel-fade" id="carouselCaption" data-bs-ride="carousel">
            <div class="carousel-indicators justify-content-end me-5 gap-2 mb-5">
                <button class="active" type="button" data-bs-target="#carouselCaption" data-bs-slide-to="0"></button>
                <button type="button" data-bs-target="#carouselCaption" data-bs-slide-to="1"></button>
                <button type="button" data-bs-target="#carouselCaption" data-bs-slide-to="2"></button>
                <button type="button" data-bs-target="#carouselCaption" data-bs-slide-to="3"></button>
                <button type="button" data-bs-target="#carouselCaption" data-bs-slide-to="4"></button>
            </div>

            <div class="carousel-inner rounded">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/images/pc-sell.png" />
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/iphone-sell.png" />
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/pet-sell.png" />
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/dress-sell.png" />
                </div>
            </div>
        </div>
    </div>
</div>

