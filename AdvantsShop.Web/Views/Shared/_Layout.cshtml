<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AdvantsShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/button.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/menu.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/drop-down.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AdvantsShop.Web.styles.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <div class="container pb-2">
            <div class="mt-3 mb-3 d-flex align-items-center">
                <div class="d-flex justify-content-start gap-5">
                    <a class="d-flex gap-2 secondary nav-link align-items-center p-0">
                        <img class="w-25" src="~/icons/cursor.svg" />
                        Москва
                    </a>

                    <a class="d-flex gap-2 nav-link secondary p-0">
                        8 800 550 83 13
                        <span class="align-text-bottom" style="font-size:12px;">Заказать звонок</span>
                    </a>
                </div>

                <a class="secondary nav-link ms-auto p-0">Вход и регистрация</a>
            </div>

            <div class="align-items-center p-5 ps-3 pe-0 d-flex" style="border-top: 1px solid #EFEFF4;">

                <a class="nav-link h-100 w-auto" href="#">
                    <img class="align-self-center" src="~/icons/logo.svg" />
                </a>

                <div class="form-outline h-100" style="width:35%;padding-left:4.5rem" data-mdb-input-init>
                    <input type="search" id="form1" class="form-control search-bar py-3" placeholder="Поиск по товарам" />
                </div>

                <div class="ms-auto d-flex justify-content-end gap-3">
                    <a class="nav-link secondary p-0">
                        <img src="~/icons/heart.svg" />
                    </a>

                    <a class="nav-link secondary p-0">
                        <img src="~/icons/burger-add.svg" />
                    </a>

                    <a class="nav-link secondary p-0">
                        <img src="~/icons/shop-cart.svg" />
                        <span class="p-1">
                            Корзина
                        </span>
                    </a>
                </div>

            </div>

            <div class="gap-5 d-flex">
                <div class="dropdown text-nowrap show">
                    <button class="btn primary p-3" style="padding-right:7rem !important;" type="button" data-bs-toggle="dropdown">
                        <img class="align-self-center" src="~/icons/burger-menu.svg" />
                        Каталог товаров
                    </button>

                    <!-- mt-4 & style for main page -->

                    <ul class="dropdown-menu list catalog-menu w-100 mt-4" style="display:block">
                        <li>
                            <a class="dropdown-item py-3 d-flex justify-content-between" href="#">
                                Одежда<img src="~/icons/arrow-right.svg" />
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item py-3 d-flex justify-content-between" href="#">
                                Мебель<img src="~/icons/arrow-right.svg" />
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item py-3 d-flex justify-content-between" href="#">
                                Бытовая техника<img src="~/icons/arrow-right.svg" />
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item py-3 d-flex justify-content-between" href="#">
                                Спортивные товары<img src="~/icons/arrow-right.svg" />
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item py-3 d-flex justify-content-between" href="#">
                                Косметика<img src="~/icons/arrow-right.svg" />
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item py-3 d-flex justify-content-between" href="#">
                                Садовая техника<img src="~/icons/arrow-right.svg" />
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item py-3 d-flex justify-content-between" href="#">
                                Строительные материалы<img src="~/icons/arrow-right.svg" />
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item py-3 d-flex justify-content-between" href="#">
                                Автотехника<img src="~/icons/arrow-right.svg" />
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item py-3 d-flex justify-content-between" href="#">
                                Еда<img src="~/icons/arrow-right.svg" />
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item py-3 d-flex justify-content-between" href="#">
                                Разработка сайтов<img src="~/icons/arrow-right.svg" />
                            </a>
                        </li>
                    </ul>
                </div>

                <nav class="navbar navbar-expand-lg nav-primary w-100">
                    <div class="container-fluid d-flex h-100">
                        <div class="flex-fill h-100">
                            <ul class="navbar-nav justify-content-between align-items-stretch h-100 text-center">
                                <li class="nav-item dropdown flex-fill">
                                    <a class="nav-link h-100 pt-3" href="#" role="button" data-bs-toggle="dropdown">
                                        О магазине <img src="~/icons/arrow-down.svg" />
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item py-3" href="#">Возможности</a></li>
                                        <li><a class="dropdown-item py-3" href="#">Цены</a></li>
                                        <li><a class="dropdown-item py-3" href="#">Партнеры</a></li>
                                        <li><a class="dropdown-item py-3" href="#">Шаблоны</a></li>
                                        <li><a class="dropdown-item py-3" href="#">Модули</a></li>
                                        <li><a class="dropdown-item py-3" href="#">Услуги</a></li>
                                        <li><a class="dropdown-item py-3" href="#">Интеграции</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item flex-fill">
                                    <a class="nav-link h-100 pt-3" href="#">Скидки</a>
                                </li>
                                <li class="nav-item flex-fill">
                                    <a class="nav-link h-100 pt-3" href="#">Доставка и оплата</a>
                                </li>
                                <li class="nav-item flex-fill">
                                    <a class="nav-link h-100 pt-3" href="#">Услуги</a>
                                </li>
                                <li class="nav-item flex-fill">
                                    <a class="nav-link h-100 pt-3" href="#">Акции</a>
                                </li>
                                <li class="nav-item flex-fill">
                                    <a class="nav-link h-100 pt-3" href="#">Блог</a>
                                </li>
                                <li class="nav-item flex-fill rounded-end">
                                    <a class="nav-link h-100 pt-3" href="#">Контакты</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </header>
    <div class="container ">
        <main role="main" class="pt-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted bg-grey">
        <div class="container gap-5 py-5 ps-4">
            <div class="d-flex justify-content-start">
                <div class="text-start">
                    <a class="nav-link catalog-header">Каталог</a>
                    <a class="nav-link catalog-link">Телефоны</a>
                    <a class="nav-link catalog-link">Техника</a>
                    <a class="nav-link catalog-link">Одежда/обувь</a>
                    <a class="nav-link catalog-link">Детские товары</a>
                    <a class="nav-link catalog-link">Цветы</a>
                    <a class="nav-link catalog-link">Еда/напитки</a>
                </div>

                <div class="text-start">
                    <a class="nav-link catalog-header">Информация</a>
                    <a class="nav-link catalog-link">О магазине</a>
                    <a class="nav-link catalog-link">Бренды</a>
                    <a class="nav-link catalog-link">Доставка и оплата</a>
                    <a class="nav-link catalog-link">Блог</a>
                    <a class="nav-link catalog-link">Бонусная программа</a>
                    <a class="nav-link catalog-link">Контакты</a>
                </div>

                <div class="text-start">
                    <a class="nav-link catalog-header">Личный кабинет</a>
                    <a class="nav-link catalog-link">Вход</a>
                    <a class="nav-link catalog-link">Регистрация</a>
                    <a class="nav-link catalog-link">Забыли пароль?</a>
                </div>

                <div class="text-start">
                    <a class="nav-link catalog-header">Мы в социальных сетях</a>
                    <a class="nav-link catalog-link">Вконтакте</a>
                    <a class="nav-link catalog-link">Фейсбук</a>
                    <a class="nav-link catalog-link">Твиттер</a>
                </div>

                <div class="btn btn-danger btn-certificate ms-auto py-3 ps-3 text-start h-75 ">
                    <img class="mb-2" src="~/icons/shoppings.svg" />
                    <br />
                    <span class="text-uppercase">Подарочный <br /> сертификат</span>
                </div>

            </div>

            <div class="d-flex justify-content-between py-5 mt-5">
                <span class="catalog-header">&copy; 2023 AdvantsShop</span>

                <div class="d-flex justify-content-center payment-types-container">
                    <img class="ps-2" src="~/icons/payment/paypal.svg" />
                    <img class="ps-2" src="~/icons/payment/yandex-money.svg" />
                    <img class="ps-2" src="~/icons/payment/mastercard.svg" />
                    <img class="ps-2" src="~/icons/payment/visa.svg" />
                    <img class="ps-2" src="~/icons/payment/mir.svg" />
                </div>

                <div class="d-flex justify-content-end">
                    <a class="nav-link link-primary py-0 text-end">Лицензионное соглашение</a>
                    <a class="nav-link link-primary py-0 text-end p-0">Политика конфиденциальности</a>
                </div>
            </div>


        </div>
    </footer>
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    </environment>

    <environment exclude="Development">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    </environment>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
