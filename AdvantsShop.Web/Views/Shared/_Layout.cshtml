<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AdvantsShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/button.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/menu.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/drop-down.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AdvantsShop.Web.styles.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <div class="container pb-2">
            <div class="mt-3 mb-3 d-flex align-items-center">
                <div class="d-flex justify-content-start gap-5">
                    <a class="d-flex gap-2 secondary nav-link align-items-center p-0">
                        <img class="w-25" src="~/icons/cursor.svg" />
                        Москва
                    </a>

                    <a class="d-flex gap-2 nav-link secondary p-0">
                        8 800 550 83 13
                        <span class="align-text-bottom" style="font-size:12px;">Заказать звонок</span>
                    </a>
                </div>

                <a class="secondary nav-link ms-auto p-0">Вход и регистрация</a>
            </div>

            <div class="align-items-center p-5 ps-3 pe-0 d-flex" style="border-top: 1px solid #EFEFF4;">

                <a class="nav-link h-100 w-auto" href="#">
                    <img class="align-self-center" src="~/icons/logo.svg" />
                </a>

                <div class="form-outline h-100 ps-4" style="width:35%;" data-mdb-input-init>
                    <input type="search" id="form1" class="form-control search-bar py-3" placeholder="Поиск по товарам" />
                </div>

                <div class="ms-auto d-flex justify-content-end gap-3">
                    <a class="nav-link p-0">
                        <img src="~/icons/heart.svg" />
                    </a>

                    <a class="nav-link p-0">
                        <img src="~/icons/burger-add.svg" />
                    </a>

                    <a class="nav-link secondary p-0">
                        <img src="~/icons/shop-cart.svg" />
                        <span class="p-1">
                            Корзина
                        </span>
                    </a>
                </div>

            </div>

            <div class="gap-5 d-flex justify-content-between ">
                <button class="btn btn-primary primary btn text-nowrap w-25 p-3">
                    <img class="align-self-center" src="~/icons/burger-menu.svg" />
                    Каталог товаров
                </button>

                <nav class="navbar navbar-expand-lg nav-primary w-100">
                    <div class="container-fluid d-flex h-100">
                        <div class="flex-fill h-100">
                            <ul class="navbar-nav justify-content-between align-items-stretch h-100 text-center">
                                <li class="nav-item dropdown flex-fill">
                                    <a class="nav-link h-100 pt-3" href="#" role="button" data-bs-toggle="dropdown">
                                        О магазине <img src="~/icons/arrow-down.svg" />
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item py-3" href="#">Возможности</a></li>
                                        <li><a class="dropdown-item py-3" href="#">Цены</a></li>
                                        <li><a class="dropdown-item py-3" href="#">Партнеры</a></li>
                                        <li><a class="dropdown-item py-3" href="#">Шаблоны</a></li>
                                        <li><a class="dropdown-item py-3" href="#">Модули</a></li>
                                        <li><a class="dropdown-item py-3" href="#">Услуги</a></li>
                                        <li><a class="dropdown-item py-3" href="#">Интеграции</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item flex-fill">
                                    <a class="nav-link h-100 pt-3" href="#">Скидки</a>
                                </li>
                                <li class="nav-item flex-fill">
                                    <a class="nav-link h-100 pt-3" href="#">Доставка и оплата</a>
                                </li>
                                <li class="nav-item flex-fill">
                                    <a class="nav-link h-100 pt-3" href="#">Услуги</a>
                                </li>
                                <li class="nav-item flex-fill">
                                    <a class="nav-link h-100 pt-3" href="#">Акции</a>
                                </li>
                                <li class="nav-item flex-fill">
                                    <a class="nav-link h-100 pt-3" href="#">Блог</a>
                                </li>
                                <li class="nav-item flex-fill rounded-end">
                                    <a class="nav-link h-100 pt-3" href="#">Контакты</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted secondary bg-grey">
        <div class="container h-100">
            &copy; 2023 AdvantsShop
        </div>
    </footer>
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    </environment>

    <environment exclude="Development">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    </environment>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
